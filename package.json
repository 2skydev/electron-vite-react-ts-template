{
  "name": "electron-vite-react-ts-template",
  "private": true,
  "version": "0.0.1",
  "description": "electron-vite-react-ts-template",
  "main": "dist/electron/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder"
  },
  "dependencies": {
    "@tanstack/react-location": "^3.7.4",
    "clsx": "^1.2.1",
    "dayjs": "^1.11.4",
    "electron-store": "^8.1.0",
    "formik": "^2.2.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "recoil": "^0.7.4",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/node": "^18.6.2",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.25",
    "@vitejs/plugin-react": "^2.0.0",
    "cross-env": "^7.0.3",
    "electron": "^20.0.1",
    "electron-builder": "^23.3.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "prettier": "^2.7.1",
    "typescript": "^4.6.4",
    "typescript-styled-plugin": "^0.18.2",
    "vite": "^3.0.0",
    "vite-plugin-checker": "^0.4.9",
    "vite-plugin-electron": "^0.8.4",
    "vite-plugin-svgr": "^2.2.1",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "build": {
    "appId": "com.test.templateapp",
    "productName": "TemplateApp",
    "asar": true,
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "artifactName": "TemplateApp 설치 ${version}.${ext}",
      "uninstallDisplayName": "TemplateApp",
      "installerIcon": "resources/windows/logo.ico"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      "./resources/**"
    ]
  }
}
